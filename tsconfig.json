{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "importHelpers": true,
    "rootDir": "src",
    "moduleResolution": "Node",
    "lib": ["es2017", "es7", "es6"],
    "declaration": true,
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "skipLibCheck": true
  }
}
